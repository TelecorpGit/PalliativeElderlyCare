<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#345775" />
            <stroke
                android:width="0dp"
                android:color="#345775" />
            <corners
                android:radius="15dp" />

        </shape>

    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ffffff"
                android:endColor="#ffffff"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#7d345775" />
            <corners
                android:radius="15dp" />

        </shape>
    </item>
    </selector>